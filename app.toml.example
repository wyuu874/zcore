# 应用配置
[app]
# 是否开启调试模式
debug = false
# 服务地址
host = "0.0.0.0"
# 服务端口
port = "5566"
# 服务读取超时时间, 单位: 秒
read_timeout = 15
# 服务写入超时时间, 单位: 秒
write_timeout = 15
# 空闲超时时间, 单位: 秒
idle_timeout = 60
# 服务最大请求头字节数, 单位: MB
max_header_bytes = 1

# 日志配置
[logger]
# 日志级别: debug | info | warn | error
level = "debug"
# 日志输出渠道: console | single | daily
channel = "daily"
# 日志文件路径
path = "logs/app.log"
# 最大日志文件大小, 单位: MB
max_size = 100
# 最大日志文件数量
max_backups = 10
# 最大日志保留天数
max_age = 30

# MySQL数据库配置
[database]
# 是否开启调试模式
debug = false
# 服务地址
host = "127.0.0.1"
# 服务端口
port = "3306"
# 用户名
username = "root"
# 密码
password = "root"
# 数据库
database = "test"
# 字符集
charset = "utf8mb4"
# 最大空闲连接数
max_idle_conns = 10
# 最大连接数
max_open_conns = 100
# 连接最大生命周期, 单位: 秒
max_lifetime = 300
# 迁移文件目录
migrations_dir = "migrations"

# Redis配置
[redis]
# 服务地址
host = "127.0.0.1"
# 服务端口
port = 6379
# 密码
pass = ""
# 数据库
db = 0

# 国际化配置
[locale]
# 默认语言
default_lang = "zh-CN"
# 语言目录
dir = "locales"
